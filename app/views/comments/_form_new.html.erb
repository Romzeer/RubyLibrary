<li class="list-group-item">
  <div class="row">
    <div class="col-lg-12">
      <%= form_with(model: [ @book, @book.comments.build ], html: {class: "form-horizontal"}) do |form| %>
          <div class="form-group">
            <%= form.label :Comment %><span class="lgd"><%= current_user.email %></span><br>
            <%= form.text_area :body, {class:'form-control'} %>
          </div>
          <div class="form-group">
            <%= form.submit class: 'btn btn-primary' %>
          </div>
      <% end %>
    </div>
  </div>
</li>