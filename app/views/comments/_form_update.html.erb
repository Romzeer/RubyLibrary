<div class="col-lg-12 card">
    <%= form_with(model: [ @book, @comment ], local: true, html: {class: "form-horizontal"}) do |form| %>
        <div class="form-group">
          <%= form.label :body %><br>
          <%= form.text_area :body, {class:'form-control'} %>
        </div>
        <div class="form-group">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
    <% end %>
    <%= link_to 'back', book_path(@book), class: 'btn btn-info' %>
</div>