<li class="list-group-item">
  <div class="row">
    <div class="col-ms-12 col-lg-8">
      <p><strong class="name"><%= User.find(comment.user_id).email %></strong></p>
      <p><%= comment.body %></p>
    </div>
    <% if user_signed_in? && current_user.id=comment.user_id %>
        <div class="col-ms-12 col-lg-4 align-right">
            <% if current_user_id.to_f == comment.user_id.to_f %>
                <%= link_to 'Delete', [comment.book, comment], class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?'} %>
                <%= link_to 'Update', edit_book_comment_path(comment.book, comment), class: 'btn btn-warning btn-xs' %>
            <% end %>
        </div>
    <% end %>
  </div>
</li>