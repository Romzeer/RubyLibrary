<div class='col-md-12 flex-ctr-sb'>
  <h1>Listing book</h1>
  <div>
        <%= link_to 'Rentrer un nouveau livre',
                  {controller: 'books', action: 'new'},
                  class: 'btn btn-success' %>
        <%= link_to 'Ajouter une categorie',
                    {controller: 'categories', action: 'new'},
                    class: 'btn btn-success' %>
    </div>
</div>

<div class='col-md-12 card-sign'>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Titre</th>
          <th scope="col">Cat√©gorie</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= link_to Category.find(book.category_id).name, category_path(book.category_id) %></td>
              <td>
                <%= link_to 'Show', book_path(book), class: 'btn btn-info' %>
                <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning'  %>
                <%= link_to 'Destroy', book_path(book),
                              method: :delete,
                              data: { confirm: 'Etes-vous sur?' },
                              class: 'btn btn-danger' %>
              </td>
            </tr>

        <% end %>
      </tbody>
    </table>
</div>

<%= will_paginate @books, renderer: BootstrapPagination::Rails %>