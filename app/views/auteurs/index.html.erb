<div class='col-md-12 flex-ctr-sb'>
    <h1>Auteurs</h1>
  <div>
        <%= link_to 'Nouvel Auteur', new_auteur_path, class: "btn btn-success" %>
    </div>
</div>

<div class='col-md-12 card-sign'>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Nom</th>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @auteurs.each do |auteur| %>
            <tr>
              <td><%= auteur.name %></td>
              <td><%= auteur.bio %></td>
              <td>
                <%= link_to 'Show', auteur, class: 'btn btn-info' %>
                <%= link_to 'Edit', edit_auteur_path(auteur), class: 'btn btn-warning' %>
                <%= link_to 'Destroy', auteur, method: :delete, data: { confirm: 'Etes vous sur ?' }, class: 'btn btn-danger' %>
              </td>
            </tr>

        <% end %>
      </tbody>
    </table>
</div>